<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="HSKMobile.View.Index">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Index!"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

			<Button
			  Text="HSK Level 1"
			  Clicked="HSKLevel1_Clicked" />
			<Button
			  Text="HSK Level 2"
			  Clicked="HSKLevel2_Clicked" />
			<Button
			  Text="HSK Level 3"
			  Clicked="HSKLevel3_Clicked" />
			<Button
			  Text="HSK Level 4"
			  Clicked="HSKLevel4_Clicked" />
			<Button
			  Text="HSK Level 5"
			  Clicked="HSKLevel5_Clicked" />
			<Button
			  Text="HSK Level 6"
			  Clicked="HSKLevel6_Clicked" />

			<Button
			  Text="Dictionary Search"
			  Clicked="DictionarySearch_Clicked" />

			<Button
			  Text="HSK Search"
			  Clicked="HSKSearch_Clicked" />


		</StackLayout>
    </ContentPage.Content>
</ContentPage>